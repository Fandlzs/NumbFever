<Application x:Class="NumbFever.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NumbFever"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="MaintBtn">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="12px"></Setter>
        </Style>
        <Style TargetType="Window" x:Key="GreyBg">
            <Setter Property="Background" Value="#FFD1D1D1"></Setter>
        </Style>
    </Application.Resources>
</Application>
