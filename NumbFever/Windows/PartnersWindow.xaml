<Window x:Class="NumbFever.Windows.PartnersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumbFever.Windows"
        mc:Ignorable="d"
        Title="Partnerek" Height="600" Width="1300" ResizeMode="NoResize" Style="{StaticResource GreyBg}">
    <Grid>
        <DataGrid x:Name="PartnersList" HorizontalAlignment="Left" Height="521" Margin="10,41,0,0" VerticalAlignment="Top" Width="1274"/>
        <Label Content="Meglévő partnerek:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="RefreshBtn" Content="Frissítés" HorizontalAlignment="Left" Margin="1019,10,0,0" VerticalAlignment="Top" Width="0130" Click="RefreshBtn_Click"/>
        <Button x:Name="NewPartnerBtn" Content="Új partner" HorizontalAlignment="Left" Margin="749,10,0,0" VerticalAlignment="Top" Width="130" Click="NewPartnerBtn_Click"/>
        <Button x:Name="EditPartnerBtn" Content="Partner szerkesztése" HorizontalAlignment="Left" Margin="884,10,0,0" VerticalAlignment="Top" Width="130" Click="EditPartnerBtn_Click"/>
        <Button x:Name="ExitBtn" Content="Kilépés" HorizontalAlignment="Left" Margin="1154,10,0,0" VerticalAlignment="Top" Width="130" Click="ExitBtn_Click"/>

    </Grid>
</Window>
